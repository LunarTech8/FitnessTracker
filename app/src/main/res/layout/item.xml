<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#00000000"
    card_view:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <LinearLayout
            android:id="@+id/nameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/exerciseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:ems="15"
                android:inputType="textCapWords"
                android:text="Exercise Name"
                />

            <EditText
                android:id="@+id/exerciseToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/exerciseName"
                android:ems="2"
                android:inputType="textNoSuggestions"
                android:text="ID"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dataRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/exerciseRepeatsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="Repeats:"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/exerciseRepeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/exerciseRepeatsLabel"
                android:inputType="number"
                android:text="0"
                />

            <TextView
                android:id="@+id/exerciseWeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/exerciseRepeats"
                android:text="Weight:"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/exerciseWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/exerciseWeightLabel"
                android:inputType="number"
                android:text="0"
                />

            <CheckBox
                android:id="@+id/exerciseDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/exerciseWeight"
                android:checked="false"
                android:text="Done" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noteRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/exerciseRemarksLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="Remarks:"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/exerciseRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/exerciseRemarksLabel"
                android:ems="14"
                android:inputType="textNoSuggestions"
                android:text=""
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>