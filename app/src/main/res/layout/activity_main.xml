<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable name="isWorkoutLoading" type="boolean" />
        <variable name="isExercisesLoading" type="boolean" />
        <variable name="workout" type="com.romanbrunner.apps.fitnesstracker.model.Workout" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/bgColor"
        android:padding="4dp"
        tools:context=".ui.MainActivity"
        >

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >

            <TextView
                android:id="@+id/loadingWorkoutTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/t_loadingTextView"
                android:textAlignment="center"
                app:visibleGone="@{isWorkoutLoading}"
                />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/comment_horizontal_margin"
                android:ems="11"
                android:text="@={workout.name}"
                android:textSize="@dimen/comment_text_size"
                android:textAlignment="center"
                android:textStyle="bold"
                app:visibleGone="@{!isWorkoutLoading}"
                />

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/comment_horizontal_margin"
                android:ems="5"
                android:inputType="date"
                android:text="@={workout.date}"
                app:visibleGone="@{!isWorkoutLoading}"
                />

        </LinearLayout>

        <Button
            android:id="@+id/finishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:text="@string/t_saveButton"
            app:visibleGone="@{!isWorkoutLoading ? !isExercisesLoading : false}"
            />

        <Button
            android:id="@+id/debugButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:text="@string/t_debugButton"
            android:visible="@bool/DEBUG"
            />

        <TextView
            android:id="@+id/loadingExercisesTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/t_loadingTextView"
            android:textAlignment="center"
            app:visibleGone="@{isExercisesLoading}"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            app:visibleGone="@{!isExercisesLoading}"
            />

    </LinearLayout>

</layout>